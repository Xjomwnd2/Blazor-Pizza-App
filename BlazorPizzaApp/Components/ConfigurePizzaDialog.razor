@using BlazorPizzaApp.Models

<div class="dialog-container">
    <div class="dialog">
        <div class="dialog-title">
            <h2>@Pizza.Special?.Name</h2>
            @Pizza.Special?.Description
        </div>
        <form class="dialog-body">
            <div>
                <label>Size:</label>
                <input type="range" min="@MinimumSize" max="@MaximumSize" step="1" 
                       @bind="Pizza.Size" @bind:event="oninput" />
                <span class="size-label">
                    @(Pizza.Size)" (£@(Pizza.GetFormattedTotalPrice()))
                </span>
            </div>
            <div>
                <label>Extra Toppings:</label>
                @if (toppings == null)
                {
                    <p><em>Loading...</em></p>
                }
                else if (Pizza.Special != null)
                {
                    <div class="toppings">
                        @foreach (var topping in toppings)
                        {
                            <div class="topping">
                                <input type="checkbox" id="topping_@topping.Id"
                                       checked="@Pizza.Toppings.Any(t => t.ToppingId == topping.Id)"
                                       @onchange="@(e => OnToppingChanged(topping, e.Value))" />
                                <label for="topping_@topping.Id">@topping.Name - (£@(topping.GetFormattedPrice()))</label>
                            </div>
                        }
                    </div>
                }
            </div>
        </form>
        <div class="dialog-buttons">
            <button class="btn btn-secondary" @onclick="OnCancel">Cancel</button>
            <button class="btn btn-success" @onclick="OnConfirm">Order ></button>
        </div>
    </div>
</div>

@code {
    [Parameter] public OrderPizza Pizza { get; set; } = new OrderPizza();
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }

    List<Topping>? toppings;

    const int MinimumSize = 9;
    const int MaximumSize = 17;

    protected override async Task OnInitializedAsync()
    {
        toppings = await GetToppingsAsync();
    }

    void OnToppingChanged(Topping topping, object? isChecked)
    {
        if ((bool?)isChecked == true)
        {
            Pizza.Toppings.Add(new PizzaTopping
            {
                Topping = topping,
                ToppingId = topping.Id,
                PizzaId = Pizza.Id
            });
        }
        else
        {
            Pizza.Toppings.RemoveAll(t => t.ToppingId == topping.Id);
        }
    }

    // Mock topping data - replace with actual service call
    Task<List<Topping>> GetToppingsAsync()
    {
        return Task.FromResult(new List<Topping>
        {
            new Topping { Id = 1, Name = "Extra Cheese", Price = 0.50m },
            new Topping { Id = 2, Name = "Pepperoni", Price = 0.75m },
            new Topping { Id = 3, Name = "Mushrooms", Price = 0.60m },
            new Topping { Id = 4, Name = "Onions", Price = 0.40m },
            new Topping { Id = 5, Name = "Bacon", Price = 1.00m }
        });
    }
}
